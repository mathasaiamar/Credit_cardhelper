<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matha.creditcardhelper.MainActivity"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Card Balance ($)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"

         />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/balance"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/interestRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/balance"
        android:text="Enter Yearly Interest Rate (%)"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        />
    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/interestRate"
        android:layout_below="@id/balance"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/minimumPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/interestRate"
        android:text="Enter Mimimum Payment ($)"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        />
    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/interestRate"
        android:layout_below="@id/interestRate"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/finalBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/minimumPayment"
        android:text="Final Card Balance ($)"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        />
    <TextView
        android:id="@+id/monthsRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/finalBalance"
        android:text="Months Remaining"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        />
    <TextView
        android:id="@+id/interestPaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/monthsRemaining"
        android:text="Interest Paid ($)"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        />
    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/finalBalance"
        android:layout_below="@id/minimumPayment"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"/>
    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/monthsRemaining"
        android:layout_below="@id/finalBalance"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="15dp"/>
    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/interestPaid"
        android:layout_below="@id/monthsRemaining"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/compute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/interestPaid"
        android:layout_marginTop="50dp"
        android:text="COMPUTE"
        android:textSize="20sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/compute"
        android:layout_marginTop="10dp"
        android:text="CLEAR"
        android:textSize="20sp"/>



</RelativeLayout>
